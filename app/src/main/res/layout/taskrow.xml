<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="@dimen/margin_card_fine"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:weightSum="1">

        <ImageView
            android:layout_width="@dimen/size_icon_task_done"
            android:layout_height="@dimen/size_icon_task_done"
            tools:src="@drawable/todoicon"
            android:id="@+id/ivLogo"
            />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_weight="1">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/tvTitulo"
                android:textSize="@dimen/tamanho_font_titulo"
                android:textStyle="bold"
                android:layout_marginLeft="@dimen/margin_card"
                android:textColor="@color/colorText"
                tools:text="titulo"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/tvSubTitulo"
                android:layout_marginLeft="@dimen/margin_card"
                android:textColor="@color/colorText"
                tools:text="descricao"
                />
        </LinearLayout>

        <ImageView
            android:id="@+id/ivEdit"
            android:layout_width="@dimen/size_icon_show_tasks"
            android:layout_height="@dimen/size_icon_show_tasks"
            android:layout_gravity="center_vertical"
            tools:src="@drawable/edit"
            android:layout_marginRight="@dimen/margin_edit"/>

    </LinearLayout>

</android.support.v7.widget.CardView>